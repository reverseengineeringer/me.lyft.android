<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/request_button_corner_radius" />
            <solid android:color="@color/purple_4" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/request_button_corner_radius" />
            <solid android:color="@color/purple_3" />
        </shape>
    </item>
    <item android:state_enabled="true" android:drawable="@drawable/gradient_purple_rounded" />
</selector>