<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="@dimen/span2" android:bottomRightRadius="@dimen/span2" />
            <solid android:color="@color/bone" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="@dimen/span2" android:bottomRightRadius="@dimen/span2" />
            <solid android:color="@color/mulberry_2" />
            <stroke android:width="@dimen/span1" android:color="@color/mulberry_2" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="@dimen/span2" android:bottomRightRadius="@dimen/span2" />
            <solid android:color="@color/mulberry_alpha_50" />
            <stroke android:width="@dimen/span1" android:color="@color/mulberry_alpha_50" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="@dimen/span2" android:bottomRightRadius="@dimen/span2" />
            <solid android:color="@color/mulberry" />
            <stroke android:width="@dimen/span1" android:color="@color/mulberry" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:topRightRadius="@dimen/span2" android:bottomRightRadius="@dimen/span2" />
            <solid android:color="@color/white" />
        </shape>
    </item>
</selector>