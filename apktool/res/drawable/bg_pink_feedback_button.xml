<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/span2" />
            <solid android:color="@color/bone" />
            <stroke android:width="@dimen/span1" android:color="@color/dove" />
        </shape>
    </item>
    <item android:state_checked="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/span2" />
            <solid android:color="@color/hot_pink_active" />
            <stroke android:width="@dimen/span1" android:color="@color/hot_pink_active" />
        </shape>
    </item>
    <item android:state_enabled="false" android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/span2" />
            <solid android:color="@color/hot_pink_alpha_50" />
            <stroke android:width="@dimen/span1" android:color="@color/hot_pink_alpha_50" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/span2" />
            <solid android:color="@color/hot_pink" />
            <stroke android:width="@dimen/span1" android:color="@color/hot_pink" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/span2" />
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/span1" android:color="@color/dove" />
        </shape>
    </item>
    <item android:drawable="@drawable/bg_grey_button">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/span2" />
            <solid android:color="@color/white" />
            <stroke android:width="@dimen/span1" android:color="@color/dove" />
        </shape>
    </item>
</selector>