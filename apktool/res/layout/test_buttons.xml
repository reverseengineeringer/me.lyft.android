        <Button android:layout_width="fill_parent" android:layout_margin="@dimen/span8" android:text="MapButton" style="@style/MapButton" />
        <Button android:layout_width="fill_parent" android:layout_margin="@dimen/span8" android:text="TransparentGreyButton" style="@style/TransparentGreyButton" />
