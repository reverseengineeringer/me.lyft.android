        <Button android:layout_width="fill_parent" android:layout_margin="@dimen/span8" android:text="FullBleedButton" style="@style/FullBleedButton" />
        <Button android:layout_width="fill_parent" android:layout_margin="@dimen/span8" android:text="PinkFullBleedButton" style="@style/PinkFullBleedButton" />
        <Button android:layout_width="fill_parent" android:layout_margin="@dimen/span8" android:text="CellButton" style="@style/CellButton" />
