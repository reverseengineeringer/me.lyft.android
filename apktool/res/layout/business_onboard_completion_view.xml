<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <me.lyft.android.controls.Toolbar android:layout_gravity="center|top" android:id="@id/toolbar" android:layout_width="fill_parent" android:layout_height="wrap_content" />
    <LinearLayout android:gravity="center" android:layout_gravity="center" android:orientation="vertical" android:padding="@dimen/span12" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <ImageView android:layout_gravity="center" android:id="@id/icon_image_view" android:background="@drawable/ic_confirmation_briefcase" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/span12" android:text="@string/business_onboard_in_business" style="@style/PrimaryText" />
        <View style="@style/HorizontalDialogDivider" />
        <TextView android:gravity="center" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/span12" android:text="@string/business_onboard_completion_description" style="@style/SecondaryText" />
    </LinearLayout>
    <Button android:layout_gravity="bottom|center" android:id="@id/done_button" android:background="@drawable/btn_mulberry_rounded" android:layout_margin="@dimen/span8" android:text="@string/done" style="@style/FullBleedButtonV2" />
</FrameLayout>