<?xml version="1.0" encoding="utf-8"?>
<ripple android:color="@color/moon"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape>
                    <solid android:color="@color/bone" />
                    <corners android:radius="0.0dip" android:bottomLeftRadius="@dimen/bg_map_widget_corners" android:bottomRightRadius="@dimen/bg_map_widget_corners" />
                </shape>
            </item>
            <item android:state_selected="true">
                <shape>
                    <solid android:color="@color/bone" />
                    <corners android:radius="0.0dip" android:bottomLeftRadius="@dimen/bg_map_widget_corners" android:bottomRightRadius="@dimen/bg_map_widget_corners" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="@color/white" />
                    <corners android:radius="0.0dip" android:bottomLeftRadius="5.0dip" android:bottomRightRadius="5.0dip" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>